<% provide(:title, 'All topics') %>

<% if signed_in? %>
<%= render 'shared/side'%>
<div class="mainregion">
  <% if @topics.any? %>
    <h1>All topics (<%= @topics.count%>)</h1>
    <ol class ="topic">
      <%=render @topics %>
    </ol>
    <%= will_paginate @topics %>
  <%end%>
</div>

<% else %>
 <% if @topics.any? %>
    <h1>All topics (<%= @topics.count%>)</h1>
    <ol class ="topic">
      <%=render @topics %>
    </ol>
    <%= will_paginate @topics %>
  <%end%>

<% end %>



