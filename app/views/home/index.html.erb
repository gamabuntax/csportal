<% provide(:title, 'All topics') %>

<div>
 <% if @goodtopics.any? %>
 <h1>Most popular topics</h1>
   
    <table>
      <%=render @goodtopics %>
    </table>
  <%end%>
</div>

<div>
 <h1>Latest topics (<%= @topics.count%>)</h1>
 <% if @topics.any? %>
   
    <table>
      <tr><%=render @topics %></tr>
    </table>
    <%= will_paginate @topics %>
  <% else%>

  <h2>There are no topics yet! </h2>
  <%end%>
</div>

<div>

<h1>Active users</h1>
 <table>
  <tr>
<% if @activeUsers.any? %>
  <% @activeUsers.each do |activeUser| %>
  <div>
 
    <td width=20%><div><%= gravatar_for activeUser%></div>

        <div class="clear-all"><%= activeUser.name %></div>
    </td>


  <%end%>

    </tr>
  </table>
  </div>  
<%end%>


</div>

   

