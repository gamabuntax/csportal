<% provide(:title, 'All topics') %>


 <h1>All topics (<%= @topics.count%>)</h1>
 <% if @topics.any? %>
   
    <ol class ="topic">
      <%=render @topics %>
    </ol>
    <%= will_paginate @topics %>
  <% else%>

  <h2>There are no topics yet! </h2>
  <%end%>


 <% if @goodtopics.any? %>
 <h1>Popular topics</h1>
   
    <ol class ="topic">
      <%=render @goodtopics %>
    </ol>
  <%end%>


   

