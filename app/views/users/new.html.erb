<% provide(:title, 'Sign up') %>
<h1 class="center">Sign up</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name, :placeholder => "Your name" %> 

      <%= f.label :email %>
      <%= f.text_field :email, :placeholder => "Your CSU Fullerton email"  %>

      <%= f.label "Education Level" %>
      <%= f.select :status, [['Undergraduate', 'undergraduate'], ['Graduate', 'graduate']] %>

      <%= f.label :password %>
      <%= f.password_field :password, :placeholder => "Six minimum characters" %>

      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation,:placeholder => "Password confirmation" %>



      <%= f.submit "Create my account", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>